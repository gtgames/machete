<table class="table table-striped">
  <thead>
    <tr>
      <th class="sortable"><%= mat(:event, :title) %></th>
      <th class="sortable"><%= mat(:event, :file) %></th>
      <th class="sortable"><%= mat(:event, :from) %></th>
      <th class="sortable"><%= mat(:event, :to) %></th>
      <th class="last">&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
    <tr>
      <td class="first"><%= event.title %></td>
      <td><%= image_tag(event.file.thumb('50x')) if !event.file.nil? %></td>
      <td class="date"><%= event.from %></td>
      <td class="date"><%= event.to %></td>
      <td class="last">
        <%= edit_button pat(:edit), url(:events, :edit, :id => event.id) %>
        <%= delete_button pat(:delete), url(:events, :destroy, :id => event.id) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>


<% content_for :actions, partial("admin/base/actions", :locals => { :p => :events }) %>

<% content_for :title, 'Eventi' %>
