<%= f.input :title %>

<% if f.object.file.nil? -%>
  <%= f.input :file, :as => :file %>
<% else -%>
  <%= f.input :file, :value => f.object.file.id.to_s, :type => :hidden %>
  <%= image_tag(f.object.file.thumb('200xx200')) %>
<% end -%>

<%= f.input :description, :as => :text %>

<%= f.input :from %>
<%= f.input :to %>

<%= f.input :tag_list %>

<div class="actions">
  <%= f.submit pat(:save), :class => "btn primary" %>
  <%= f.submit pat(:cancel), :onclick => "window.location='#{url(:events, :index)}';return false", :class => :btn %>
</div>
