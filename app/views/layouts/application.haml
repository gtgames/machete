!!! 5
%html.no-js
  %head
    %meta{:charset => "utf-8"}
    %link{:href => "/stylesheets/style.css", :rel => "stylesheet", :title => "a complete stylesheet", :type => "text/css"}
    %meta{:content => "#{DESCRIPTION}", :name => "description"}
    %meta{:content => "#{KEYWORDS}", :name => "keywords"}
    %meta{:content => "GTGames.it", :name => "author"}
    %meta{:content => "machete.it", :name => "generator"}

    %script{:charset => "utf-8", :src => "http://frenzart.com/js/head.js", :type => "text/javascript"}
    
    %title
      = BASE_TITLE
      = yield_content :title
  %body
    %nav.row
      %ul.column.grid_12
        - menu.each do |m|
          %li
            %a{:alt => m.alt, :href => m.url}= m.title
    %header#header.row
      %img.grid_4.column{:alt => "#{BASE_TITLE}", :src => "/images/logo.png"}
      .column
        %h1
          = BASE_TITLE

    %section.row
      .column.grid_8.content
        = yield
      .column.grid_4
        = tree

    %section.row
      .column.grid_12#tags

    %footer
      .row
        .column.grid_12
          = partial("shared/footer")

    %script{:charset => "utf-8", :type => "text/javascript"}
      var _gaq = _gaq || [];_gaq.push(['_setAccount', '#{ANALYTICS}']);
      _gaq.push(['_setDomainName', 'none']);
      _gaq.push(['_setAllowLinker', true]);_gaq.push(['_trackPageview']);
      head.js("http://frenzart.com/js/mootools/1.3.js", "/javascripts/application.js").js(('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js');
