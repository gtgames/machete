<article>
<% form_for :booking, "/#{Cfg.locale}/booking/new", :class => :form do |f| -%>
  <%= f.input :name %>
  <%= f.input :surname %>
  <%= f.input :email %>
  <%= f.input :city %>
  <%= f.input :phone %>
  <%= f.input :fax %>
  <%= f.input :adults %>
  <%= f.input :children %>

  <%= f.input :business_name %>
  <%= f.input :address %>
  <%= f.input :vat %>
  <%= f.input :snn %>

  <%= f.input :date_arrival %>
  <%= f.input :date_departure %>


  <%= f.input :notes,  :as => :text %>

  <div><%= t'booking.terms' %></div>
  <div class='submit_link'>
    <%= f.submit t(:save), :class => :alt_btn %>
    <%= f.submit t(:cancel), :onclick => "window.location='/#{Cfg.locale}/'", :class => :button %>
  </div>

<% end -%>
</article>

