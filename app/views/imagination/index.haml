!!! 5
%html.no-js{:lang => I18n.locale}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    / Mobile viewport optimized: j.mp/bplateviewport
    %meta{:content => "width=device-width; initial-scale=1.0", :name => "viewport"}/

    %script{:charset => "utf-8", :src => "http://frenzart.com/js/head.js", :type => "text/javascript"}

    %link{:charset => "utf-8", :href => "/stylesheets/imagination.css", :media => "screen", :rel => "stylesheet", :title => "no title", :type => "text/css"}/

    %title #{BASE_TITLE} - Photo Library
  %body
    %ul#menu
      %li
        %a{:href => "/"}
          %img{:title => "back", :src => "/images/logo_mini.png"}
    #photos
      - @photos.each do |p|
        %div
          %h1= p.name
          %a.photo{:href => p.file.url, :title => p.name}
            %img{:src => p.file.thumb.url, :title => p.name}
          %span.tags
            - p.tags.each do |t|
              = link_to t.name, url( :imagination_tag, :tag => t.name)
    /[if lt IE 7 ]
      <script src="js/dd_belatedpng.js?v=1"></script>
    /[if lt IE 9 ]
      <script src="js/dd_roundies.js?v=1"></script>
      <script>$(function(){DD_roundies.addRule('#menu', '5px');});</script>
    %script{:charset => "utf-8", :type => "text/javascript"}
      var _gaq = _gaq || [];_gaq.push(['_setAccount', '#{ANALYTICS}']);
      _gaq.push(['_setDomainName', 'none']);
      _gaq.push(['_setAllowLinker', true]);_gaq.push(['_trackPageview']);
      head.js("http://frenzart.com/js/mootools/1.3.js","http://frenzart.com/js/mootools/more.js", "/javascripts/gallery.js").js(('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js');
