<div class="module_content">
  <% Cfg[:locales].each do |l| -%>
    <div class="language <%= l %>">
      <%= f.input :"title(#{l})", :caption => mat(:taxonomy, :title), :as => :string, :value => f.object.title[l] %>
      <%= f.input :"description(#{l})", :caption => mat(:taxonomy, :description), :as => :text, :value => f.object.description[l],  :class => :editor %>
    </div>
  <% end -%>
</div>

<div>
  <%= f.input :parent_id, :type => :hidden %>

  <% if not f.object.parent_id.blank? -%>
    <div class="taxonomy_path">
      <% f.object.path.to_s.split('/').each do |p| -%>
        <% unless p.blank? -%>
          <span><%= p %></span>
        <% end -%>
      <% end -%>
    </div>
  <% end -%>

  <input name='_dummy' type="hidden">
</div>

<fieldset id='advanced'>
  <legend>Avanzate</legend>
  <% Cfg[:locales].each do |l| -%>
    <div class="language <%= l %>">
      <%= f.input :"slug(#{l})", :caption => mat(:taxonomy, :slug), :as => :string %>
    </div>
  <% end -%>
  <div><p><b>Attenzione</b> i parametri <em>permalink</em> (o <em>slug</em>) sono automaticamente generati via javascript. Normalmente non si avr&agrave; bisogno di modificarli</p><div>
</fieldset>


<div class='submit_link'>
  <%= f.submit pat(:save), :class => :alt_btn %>
  <%= f.submit pat(:cancel), :onclick => "window.location='#{url(:taxonomy, :index)}';return false", :class => :button %>
</div>
