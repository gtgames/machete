<% taxons.each do |t| -%>
  <% if t.class == Array -%>
    <%= partial "taxonomy/chooser", :locals => { :f => f, :taxons => t } %>
  <% else -%>
    <span style="margin-left: <%= 15*t.depth %>px">&nbsp;</span>
    <input type='checkbox' name="taxonomy[]" value="<%= t.id %>" <%= tax_checked?(t.id, f.object.taxonomy) %> ><%= t.title %><br>
  <% end -%>
<% end -%>

