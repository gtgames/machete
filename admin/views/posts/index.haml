%nav.secondary-navigation
  %ul
    %li.first.active=link_to pat(:list), url(:posts, :index)
    %li=link_to pat(:new), url(:posts, :new)
#content
  %h2
    =pat(:all)
    =mt(:post)
  .inner
    %table
      %thead
        %tr
          %th.first=mat(:post, :title)
          %th=mat(:photo, :tag_list)
          %th=mat(:post, :created_at)
          %th=mat(:post, :updated_at)
          %th.last="&nbsp;"
      %tbody
        -@posts.each do |post|
          %tr
            %td.first=post.title
            %td=post.tag_list
            %td=datef post.created_at
            %td=datef post.updated_at
            %td.last
              =button_to pat(:edit), url(:posts, :edit, :id => post.id), :method => :get, :class => :button_to
              =button_to pat(:delete), url(:posts, :destroy, :id => post.id), :method => :delete, :class => :button_to_delete


-content_for :sidebar, partial("base/sidebar")