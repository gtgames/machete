<table> 
  <thead>
    <tr>
      <th>&nbsp;</th>
      <th><%= mat(:page, :title) %></th>
      <th><%= mat(:page, :created_at) %></th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><input type="checkbox"></td>
        <td><%= post.title %></td>
        <td><%= post.tags %></td>
        <td>
          <%= button_to pat(:edit), url(:post, :edit, :id => post.id), :method => :get, :class => 'button_to edit' %>
          <%= button_to pat(:delete), url(:post, :destroy, :id => post.id), :method => :delete, :class => 'button_to trash' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% content_for :actions, partial("base/actions", :locals => { :p => :posts }) %>

<% content_for :title, 'Articoli' %>