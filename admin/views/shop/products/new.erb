<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to pat(:list), url(:shop, :products) %></li>
      <li class="active"><%= link_to pat(:new), url(:shop, :new_product) %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= pat(:new) %> <% mt(:product) %></h2>
    <div class="inner">
      <% form_for :product, url(:shop, :create_product), :multipart => true, :class => :form do |f| %>
        <%= partial "shop/products/form", :locals => { :f => f } %>
      <% end %>
    </div>
  </div>
</div>
<% content_for :sidebar, partial("shop/sidebar") %>
