<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to pat(:list), url(:shop, :categories) %></li>
      <li class="active"><%= link_to pat(:new), url(:shop, :new_category) %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= pat(:new) %> <% mt(:category) %></h2>
    <div class="inner">
      <% form_for :category, url(:shop, :create_category), :class => :form do |f| %>
        <%= partial "shop/categories/form", :locals => { :f => f } %>
      <% end %>
    </div>
  </div>
</div>
<% content_for :sidebar, partial("shop/sidebar") %>
