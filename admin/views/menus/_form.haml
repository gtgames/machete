.group
  %a#menu_templates_toggler=t :"admin.menu.templates"
  %div#menu_templates
    %span
      -nav_list.each do |n|
        %a{ :href => "#{n[:link]}", :title => "#{n[:title]}" }= n[:title]

.group
  =f.label :title
  =f.error_message_on :title
  =f.text_field :title

.group
  =f.label :alt
  =f.error_message_on :alt
  =f.text_field :alt

.group
  =f.label :url
  =f.error_message_on :url
  =f.text_field :url
  %span.description url del link (es. "http://gtgames.it/")

= cpartial "custom/menus", :locals => { :f => f }

.group.navform
  =f.submit pat(:save), :class => :button
  =f.submit pat(:cancel), :onclick => "window.location='#{url(:menus, :index)}';return false", :class => :button