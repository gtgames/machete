.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:menus, :index)
      %li.active=link_to pat(:new), url(:menus, :new)
  .content
    %h2.title
      =pat(:new)
      =mt(:menu)
    .inner
      -form_for :menu, url(:menus, :create), :class => :form do |f|
        =partial "menus/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")