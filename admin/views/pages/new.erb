<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to pat(:list), url(:pages, :index) %></li>
      <li class="active"><%= link_to pat(:new), url(:pages, :new) %></li>
      <li><%= link_to pat(:tree), url(:pages, :tree) %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= pat(:new) %> <% mt(:page) %></h2>
    <div class="inner">
      <% form_for :page, url(:pages, :create), :charset => 'utf8', :class => :form do |f| %>
        <%= partial "pages/form", :locals => { :f => f, :my_id => nil, :parent_id => nil, :tags => '' } %>
      <% end %>
    </div>
  </div>
</div>
<% content_for :sidebar, partial("base/sidebar") %>