<table cellspacing="0"> 
  <thead>
    <tr>
      <th>&nbsp;</th>
      <th><%= mat(:page, :title) %></th>
      <th><%= mat(:page, :created_at) %></th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><input type="checkbox"></td>
        <td><%= page.title %></td>
        <td><%= page.tags %></td>
        <td>
          <%= button_to pat(:edit), url(:pages, :edit, :id => page.id), :method => :get, :class => [:button_to, :edit] %>
          <%= button_to pat(:delete), url(:pages, :destroy, :id => page.id), :method => :delete, :class => [:button_to, :trash] %>
          <input type="image" src="images/icn_edit.png" title="Edit">
          <input type="image" src="images/icn_trash.png" title="Trash">
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<footer></footer>

<% content_for :actions, partial("base/actions", :locals => { :p => :pages }) %>
<% content_for :sidebar, partial("base/sidebar") %>
<% content_for :title, 'Pagine' %>