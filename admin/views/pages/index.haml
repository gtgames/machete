%nav.secondary-navigation
  %ul
    %li.first.active=link_to pat(:list), url(:pages, :index)
    %li=link_to pat(:new), url(:pages, :new)
    %li=link_to pat(:tree), url(:pages, :tree)
#content
  %h2
    =pat(:all)
    =mt(:page)
  .inner
    %table
      %thead
        %tr
          %th.first=mat(:page, :title)
          %th=mat(:page, :url)
          %th=mat(:page, :is_home)
          %th=mat(:page, :created_at)
          %th=mat(:page, :updated_at)
          %th.last="&nbsp;"
      %tbody
        -@pages.each do |page|
          %tr
            %td=page.title
            %td=link_to "url", "http://#{DOMAIN_NAME}/#{page.id}/#{page.slug}"
            %td=page.is_home
            %td=datef page.created_at
            %td=datef page.updated_at
            %td
              =link_to 'Allegati', url(:attachments, :index, :page_id => page.id)
              (#{page.attachments.count})
            %td.last
              =button_to pat(:edit), url(:pages, :edit, :id => page.id), :method => :get, :class => :button_to
              =button_to pat(:delete), url(:pages, :destroy, :id => page.id), :method => :delete, :class => :button_to_delete
