!!! 5
%html
  %head
    %meta{:content => I18n.locale, :name => "lang"}/
    %meta{:content => "utf-8", :name => "charset"}/
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %title Machete Administration - #{BASE_TITLE}
    -# CSS 
    %link{:href => "/stylesheets/admin.css", :rel => "stylesheet", :type => "text/css"}/
    %script{:charset => "utf-8", :src => "/javascripts/modernizr-1.5.min.js", :type => "text/javascript"}
    -# MooTools
    -# %script{:charset => "utf-8", :src => "/javascripts/mootools-core-1.3-full-compat.js", :type => "text/javascript"}/
    %script{:charset => "utf-8", :src => "/javascripts/mootools/mootools-1.2.5-core-yc.js", :type => "text/javascript"}
    %script{:charset => "utf-8", :src => "/javascripts/mootools/mootools-1.2.4.4-more.js", :type => "text/javascript"}
    -# MooEditable
    %link{:href => "/javascripts/mooeditable/Assets/MooEditable/MooEditable.css", :rel => "stylesheet", :type => "text/css"}/
    %script{:charset => "utf-8", :src => "/javascripts/mooeditable.js", :type => "text/javascript"}
    -# /Mooeditable
    %script{:charset => "utf-8", :src => "/javascripts/admin.js", :type => "text/javascript"}
    - if PADRINO_ENV == 'development'
      %script{:charset => "utf-8", :src => "/javascripts/development.js", :type => "text/javascript"}
    %script{:charset => "utf-8", :src => "/javascripts/antistress.js", :type => "text/javascript"}
  %body

    %header.row
      .column.grid_12
        %a{ :href => url(:base_index) }
          %img#logo{ :src => "/images/machete.png", :title => "Machete Backend" }
        %ul#user-navigation
          %li
            %a{:href => "#{options.frontend_url}", :target => "_new"} vai al sito
          %li= link_to pat(:profile), url(:accounts, :edit, :id => current_account.id)
          %li= link_to pat(:logout), url(:sessions, :destroy), :method => :delete
      %nav.column
        %ul.grid_12#main-navigation
          - project_modules.each do |project_module|
            %li{:class => ((request.path_info =~ /^#{project_module.path}/)? "active" : "")}
              = link_to project_module.human_name, project_module.path("/")

    .flash.row
      = [:error, :warning, :notice].map { |type| flash_tag(type, :class => "column grid_12 message #{type}") }.join
    %section.row
      #main.column.grid_10
        = yield
      #sidebar.column.grid_2
        -# yield_content :sidebar
        %h2 Sketchbook
        %canvas#antistress{:width => '140', :height => '280'}
        #antistress_pen Penna
        #antistress_eraser Gomma
        #antistress_cleaner Pulisci
        #antistress_saver Salva

    %footer.row
      %p.column.grid_12
        Powered by
        %a{ :href => 'http://machete.it' } Machete
        Copyright &copy; #{Time.now.year}
        %a{ :href => 'http://gtgames.it' } GTGames.it