!!! 5
%html
  %head
    %meta{:content => I18n.locale, :name => "lang"}/
    %meta{:content => "utf-8", :name => "charset"}/
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %title Machete Administration - #{BASE_TITLE}
    -# CSS 
    %link{:href => "http://frenzart.com/css/admin_0.2.css", :rel => "stylesheet", :type => "text/css"}
    %script{:charset => "utf-8", :src => "http://frenzart.com/js/head.js", :type => "text/javascript"}

  %body

    %header
      #head
        %a{ :href => url(:base_index) }
          %img#logo{ :src => "/images/machete.png", :title => "Machete Backend" }
        %ul#user-navigation
          %li
            %a{:href => "http://#{DOMAIN_NAME}/", :target => "_blank"} vai al sito
          %li= link_to pat(:profile), url(:accounts, :edit, :id => current_account.id)
          %li= link_to pat(:logout), url(:sessions, :destroy), :method => :delete
      %nav
        %ul#main-navigation
          - project_modules.each do |project_module|
            %li{:class => ((request.path_info =~ /^#{project_module.path}/)? "active" : "")}
              = link_to project_module.human_name, project_module.path("/")
      #sidebar
        -# yield_content :sidebar
        %h2 Sketchbook
        %canvas#antistress{:width => '120', :height => '100'}
        #antistress_pen Penna
        #antistress_eraser Gomma
        #antistress_cleaner Pulisci
        #antistress_saver Salva

    .flash
      = [:error, :warning, :notice].map { |type| flash_tag(type, :class => "message #{type}") }.join

    %section
      #main
        = yield

      %footer
        %p
          Powered by
          %a{ :href => 'http://machete.it' } Machete 0.2
          %br
          &copy; #{Time.now.year}
          %a{ :href => 'http://gtgames.it' } GTGames.it
    
    %script{:charset => "utf-8", :type => "text/javascript"}
      head.js("http://frenzart.com/js/mootools/1.3.js",
      "http://frenzart.com/js/mootools/more.js",
      "http://frenzart.com/js/admin_0.3.js",
      "http://frenzart.com/js/antistress.js");
    %script{:charset => "utf-8", :src => "http://frenzart.com/js/ckeditor/ckeditor.js", :type => "text/javascript"}
    %script{:charset => "utf-8", :type => "text/javascript"}
      window.CKEDITOR_BASEPATH = '/js/ckeditor/';
      try {
      CKEDITOR.replace('wysiwyg',{
      lang: 'it',
      toolbar_Full: [['Source', '-', 'Preview', '-'], ['Cut', 'Copy', 'Paste', 'PasteText', 'PasteFromWord', '-', 'Print', 'SpellChecker'], //, 'Scayt' 
      ['Undo', 'Redo', '-', 'Find', 'Replace', '-', 'SelectAll', 'RemoveFormat'], '/', ['Bold', 'Italic', 'Underline', 'Strike', '-', 'Subscript', 'Superscript'],
      ['NumberedList', 'BulletedList', '-', 'Outdent', 'Indent', 'Blockquote'], ['JustifyLeft', 'JustifyCenter', 'JustifyRight', 'JustifyBlock'],
      ['Link', 'Unlink', 'Anchor'], ['Image', 'Table', 'HorizontalRule', 'SpecialChar'], '/', ['Styles', 'Format', 'Templates'], ['Maximize', 'ShowBlocks']],
      startupFocus: false,
      filebrowserBrowseUrl:      '/media_browser/',
      filebrowserImageBrowseUrl: '/media_browser/?type=image',
      });}catch(e){}
      //CKEDITOR.replaceAll();
