%nav.secondary-navigation
  %ul
    %li.first.active=link_to pat(:list), url(:accounts, :index)
    %li=link_to pat(:new), url(:accounts, :new)
#content
  %h1
    =pat(:all)
    =mt(:account)
  .inner
    %table
      %thead
        %tr
          %th.first=mat(:account, :id)
          %th=mat(:account, :name)
          %th=mat(:account, :surname)
          %th=mat(:account, :email)
          %th.last="&nbsp;"
      %tbody
        -@accounts.each do |account|
          %tr
            %td.first=account.id
            %td=account.name
            %td=account.surname
            %td=account.email
            %td.last
              =button_to pat(:edit), url(:accounts, :edit, :id => account.id), :method => :get, :class => :button_to
              =button_to pat(:delete), url(:accounts, :destroy, :id => account.id), :method => :delete, :class => :button_to_delete
