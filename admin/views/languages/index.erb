<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to pat(:list), url(:languages, :index) %></li>
      <li><%= link_to pat(:new), url(:languages, :new) %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= pat(:all) %> <% mt(:language) %></h2>
    <div class="inner">
      <table class="table">
        <tr>
          <th class="first"><%= mat(:language, :id) %></th>
          <th><%= mat(:language, :code) %></th>
          <th><%= mat(:language, :name) %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @languages.each do |language| %>
        <tr>
          <td class="first"><%= language.id %></td>
          <td><%= language.code %></td>
          <td><%= language.name %></td>
          <td class="last">
            <%= button_to pat(:edit), url(:languages, :edit, :id => language.id), :method => :get, :class => :button_to %> |
            <%= button_to pat(:delete), url(:languages, :destroy, :id => language.id), :method => :delete, :class => :button_to %>
          </td>
        </tr>
        <% end %>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions"></div>
      </div>
    </div>
  </div>
</div>
<% content_for :sidebar, partial("base/sidebar") %>