.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:aphorisms, :index)
      %li=link_to pat(:new), url(:aphorisms, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:aphorism)
    .inner
      %table.table
        %tr
          %th.first=mat(:aphorism, :id)
          %th=mat(:aphorism, :aphorism)
          %th.last="&nbsp;"
        -@aphorisms.each do |aphorism|
          %tr
            %td.first=aphorism.id
            %td=aphorism.aphorism
            %td.last
              =button_to pat(:edit), url(:aphorisms, :edit, :id => aphorism.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:aphorisms, :destroy, :id => aphorism.id), :method => :delete, :class => :button_to
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")