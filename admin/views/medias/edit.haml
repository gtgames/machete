.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:medias, :index)
      %li=link_to pat(:new), url(:medias, :new)
      %li.active=link_to pat(:edit), url(:medias, :edit, :id => @media.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:media)
    .inner
      -form_for :media, url(:medias, :update, :id => @media.id), :method => :put, :class => :form do |f|
        =partial "medias/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")