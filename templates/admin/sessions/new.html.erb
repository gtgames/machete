<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<title>Admin</title>
	<link rel="stylesheet" href="/stylesheets/admin.css" type="text/css" media="screen" title="no title" charset="utf-8">
</head>
<body>

	<div id='login_box'>
		<h1>Login</h1>
			<div class="flash">
				<%= [:error, :warning, :notice].map { |type| flash_tag(type, :class => "message #{type}") }.join %>
		</div>
		<% form_tag(url(:sessions, :create)) do %>
			<label for="username">Login</label>
			<%= text_field_tag :username, :value => params[:username], :id => 'username' %>
			<label for="password">Password</label>
			<%= password_field_tag :password, :value => params[:password], :id => 'password' %>
			<% if Padrino.env == :development %>
				<label class="checkbox">
					<input type="checkbox" name="bypass"> Bypass login?
				</label>
			<% end %>
			<div class="form-actions">
				<button type="submit" class="btn">Sign in</button>
			</div>
		<% end %>
	</div>
</body>
</html>
