<table  class="table table-striped">
  <thead>
    <tr>
      <th class="sortable"><%= mat(:page, :title) %></th>
      <th class="sortable"><%= mat(:page, :taxonomy) %></th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.title %></td>
        <td>
          <% if page.taxonomy.size > 0 -%>
            <%= page.taxonomy.first['path'].to_s %>
          <% end -%>
          </td>
        <td>
          <%= edit_button pat(:edit), url(:pages, :edit, :id => page.id) %>
          <%= delete_button pat(:delete), url(:pages, :destroy, :id => page.id) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% content_for :actions, partial("admin/base/actions", :locals => { :p => :pages }) %>

<% content_for :title, 'Pagine' %>
