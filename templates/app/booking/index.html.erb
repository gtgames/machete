<article>
<% form_for :booking, url(:booking, :new), :class => :form do |f| -%>
  <div class="row">
    <div class="column grid_4">
      <%= f.input :name %>
    </div>
    <div class="column grid_4">
      <%= f.input :surname %>
    </div>
  </div>

  <div class="row">
    <div class="column grid_8">
      <%= f.input :city %>
    </div>
  </div>
  <div class="row">
    <div class="column grid_4">
      <%= f.input :email %>
    </div>
    <div class="column grid_2">
      <%= f.input :phone %>
    </div>
    <div class="column grid_2">
      <%= f.input :fax %>
    </div>
  </div>
  <div class="row">
    <div class="column grid_4">
      <%= f.input :adults %>
    </div>
    <div class="column grid_4">
      <%= f.input :children %>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="column grid_4">
      <%= f.input :business_name %>
    </div>
    <div class="column grid_4">
      <%= f.input :address %>
    </div>
  </div>
  <div class="row">
    <div class="column grid_4">
      <%= f.input :vat %>
    </div>
    <div class="column grid_4">
      <%= f.input :snn %>
    </div>
  </div>
  <hr>

  <div class="row">
    <div class="column grid_4">

      <%= f.input :date_arrival %>
    </div>
    <div class="column grid_4">
      <%= f.input :date_departure %>
    </div>
  </div>
  <hr>

  <div class="row">
    <div class="column grid_8">
      <%= f.input :notes, :as => :text %>
    </div>
  </div>

  <div><%= t'booking.terms' %></div>
  <div class='submit_link'>
    <%= f.submit t(:save), :class => :alt_btn %>
    <%= f.submit t(:cancel), :onclick => "window.location='#{url(:index, :index)}'", :class => :button %>
  </div>

<% end -%>
</article>

