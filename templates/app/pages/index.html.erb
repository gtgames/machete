<% if @taxonomy %>
<div class="taxonomy">
  <h1><%= @taxonomy.title %></h1>
  <%= @taxonomy.description %>
</div>
<% end %>

<% @pages.each do |p| %>
  <article>
    <h1><%= link_to p.title, url(:pages, :show, :slug => p.slug.to_s) %></h1>
    <p class="lead"><%= p.lead %></p>
    <%= p.text %>
  </article>
<% end %>
